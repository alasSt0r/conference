{% extends 'base.html.twig' %}

{% block title %}Conference index{% endblock %}

{% block body %}
    <h1>Conference index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Pathologie</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for conference in conferences %}
            <tr>
                <td>{{ conference.id }}</td>
                <td>{{ conference.date ? conference.date|date('Y-m-d') : '' }}</td>
                <td>{{ conference.pathologie ? conference.pathologie.libelle : '' }}</td>
                <td>
                    <a href="{{ path('app_conf_show', {'id': conference.id}) }}">show</a>
                    <a href="{{ path('app_conf_edit', {'id': conference.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_conf_new') }}">Create new</a>
    <a href="{{ path('app_conf_by_pathologie') }}" class="btn">Par pathologie</a>
{% endblock %}
